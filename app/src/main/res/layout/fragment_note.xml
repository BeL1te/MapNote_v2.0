<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/main_background"
    tools:context=".screens.note.NoteFragment">


    <TextView
        android:id="@+id/title_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/default_margin_in_item"
        android:layout_marginTop="@dimen/default_margin_in_item"
        android:layout_marginEnd="@dimen/default_margin_in_item"
        android:textColor="@color/text_note_color"
        android:textSize="@dimen/title_size"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="Мой хуй твёрдый" />

    <TextView
        android:id="@+id/data_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/default_margin_in_item"
        android:layout_marginEnd="@dimen/default_margin_in_item"
        android:textColor="@color/text_note_color"
        android:textSize="@dimen/data_text_size"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/title_text"
        tools:text="Датка сучка" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/data_text">

        <TextView
            android:id="@+id/content_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/default_margin_in_item"
            android:layout_marginStart="@dimen/default_margin_in_item"
            android:layout_marginEnd="@dimen/default_margin_in_item"
            android:gravity="top"
            android:textColor="@color/text_note_color"
            android:textSize="16sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/data_text"
            tools:text="вфывждт авыфатыдлипды пыодж рпидфиап ап фдапидвалоыипт лвдоап вфвпоат двфалотп яопт аловфятп лавяоатп лвяотп яваопт явь" />
    </ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>