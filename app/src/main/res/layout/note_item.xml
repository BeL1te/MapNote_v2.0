<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    app:cardCornerRadius="@dimen/card_radius"
    app:cardElevation="@dimen/card_shadow"
    android:layout_margin="@dimen/default_margin_in_item">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/item_main_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/cardview_dark_background">

        <TextView
            android:id="@+id/item_title_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            tools:text="Странный вратарь"
            android:textStyle="bold"
            android:textColor="@color/text_note_color"
            android:textSize="@dimen/title_size"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginStart="@dimen/default_margin_in_item"
            android:layout_marginTop="@dimen/default_margin_in_item"
            android:layout_marginEnd="@dimen/default_margin_in_item"/>

        <TextView
            android:id="@+id/item_date_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="Футбол"
            app:layout_constraintTop_toBottomOf="@+id/item_title_text"
            app:layout_constraintStart_toStartOf="parent"
            android:textColor="@color/text_note_color"
            android:textSize="@dimen/data_text_size"
            android:layout_marginStart="@dimen/default_margin_in_item"
            android:layout_marginEnd="@dimen/default_margin_in_item"/>

        <TextView
            android:id="@+id/item_content_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            tools:text="вфывждт авыфатыдлипды пыодж рпидфиап ап фдапидвалоыипт лвдоап вфвпоат двфалотп яопт аловфятп лавяоатп лвяотп яваопт явь"
            android:textColor="@color/text_note_color"
            android:textSize="16sp"
            app:layout_constraintTop_toBottomOf="@+id/item_date_text"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_margin="@dimen/default_margin_in_item"
            android:layout_marginStart="@dimen/default_margin_in_item"
            android:layout_marginEnd="@dimen/default_margin_in_item"
            />


    </androidx.constraintlayout.widget.ConstraintLayout>


</androidx.cardview.widget.CardView>